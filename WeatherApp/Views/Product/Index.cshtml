@model IEnumerable<WeatherApp.ViewModels.ProductDetailsViewModel>


<h1>Employee List</h1>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>Description</th>
            <th>ManufacturedBy</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5">No Records Found!!!</td>
            </tr>
        }

        else
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.ManufacturedBy</td>
                    <td>
                        <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@product.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>