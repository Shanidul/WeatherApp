@model WeatherApp.ViewModels.UpdateProductViewModel
<h1>Edit Employee</h1>

<form asp-controller="Product" asp-action="UpdateProduct" method="post">

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="ManufacturedBy"></label>
        <input type="text" asp-for="ManufacturedBy" class="form-control" />
        <span asp-validation-for="ManufacturedBy" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

