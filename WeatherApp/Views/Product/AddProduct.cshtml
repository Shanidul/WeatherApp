@model WeatherApp.ViewModels.AddProductViewModel

<h1>Add Product</h1>
<hr />


<form asp-action="AddProduct" asp-controller="Product" method="post">

    <div class="form-group">


        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManufacturedBy"></label>
        <input type="text" asp-for="ManufacturedBy" class="form-control" />
        <span asp-validation-for="ManufacturedBy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Product" class="btn btn-primary" style="margin-bottom:50px;" />
    </div>
</form>
